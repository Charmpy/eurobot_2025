<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="can_gripper_1">
        <visual>
            <origin xyz="0.0 0 0.0" rpy="0 0 1.57" />
            <geometry>
                <box size="0.05 0.02 0.02"/>
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 1.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.00 0 0.00" rpy="0 0 1.57" />
            <geometry>
                <box size="0.05 0.02 0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.01" x="0.05" y="0.02" z="0.02">
            <origin xyz="0.0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="can_gripper_joint_1" type="prismatic">
        <parent link="can_lift_link"/>
        <child link="can_gripper_1"/>
        <origin xyz="0.05 -0.05 0.05" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="0" upper="0.1" velocity="0.5"/>
    </joint>

    <link name="can_gripper_2">
        <visual>
            <origin xyz="0.0 0 0" rpy="0 0 -1.57" />
            <geometry>
                <box size="0.05 0.02 0.02"/>
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 1.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0 0.0" rpy="0 0 -1.57" />
            <geometry>
                <box size="0.05 0.02 0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.01" x="0.05" y="0.02" z="0.02">
            <origin xyz="0.0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="can_gripper_joint_2" type="prismatic">
        <parent link="can_lift_link"/>
        <child link="can_gripper_2"/>
        <origin xyz="0.05 0.05 0.05" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="0" upper="0.1" velocity="0.5"/>
    </joint>

    <gazebo>
        <plugin name="gripper_plugin_gz::DynamicDetachableJoint" filename="libgripper_plugin_gz.so">
            <parent_link>can_gripper_1</parent_link>
            <attach_topic>/detachable_jointcl/attach</attach_topic>
            <detach_topic>/detachable_jointcl/detach</detach_topic>
            <output_topic>/detachable_jointcl/output</output_topic>
            <grip_link>grip_link</grip_link>
        </plugin>
        <plugin name="gripper_plugin_gz::DynamicDetachableJoint" filename="libgripper_plugin_gz.so">
            <parent_link>can_gripper_2</parent_link>
            <attach_topic>/detachable_jointcr/attach</attach_topic>
            <detach_topic>/detachable_jointcr/detach</detach_topic>
            <output_topic>/detachable_jointcr/output</output_topic>
            <grip_link>grip_link</grip_link>
        </plugin>
