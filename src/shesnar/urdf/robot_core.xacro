<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
<!-- 
  <mujoco>
    <compiler meshdir="meshes" discardvisual="false" />
  </mujoco> -->



    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <xacro:include filename="inertial_macros.xacro"/>

    <link name="base_link"></link>

    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="base_footprint"></link>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="body">
        <visual>
            <origin xyz="-0.18 -0.1 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://shesnar/meshes/body.dae" scale="0.001 0.001 0.001" rpy="0 0 1.04"/>
            <!-- <cylinder radius="0.20" length="0.12"/> -->
            </geometry>
            <material name="">
                <color rgba="0.1 0.1 0.1 1" />
            </material>            
        </visual>
        <collision>
            <origin xyz="0 0 0.06" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.20" length="0.12"/>

            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="4.0" length="0.12" radius="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


</robot>
