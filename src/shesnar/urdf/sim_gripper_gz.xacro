    <gazebo>
        <plugin filename="gz-sim-touchplugin-system" name="gz::sim::systems::TouchPlugin">
            <target>48</target>
            <namespace>trigger</namespace>
            <time>0.001</time>
            <enabled>true</enabled>
        </plugin>


